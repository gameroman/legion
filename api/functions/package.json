{
  "name": "legion-api",
  "scripts": {
    "lint": "eslint --ext .js,.ts .",
    "build": "webpack",
    "build:watch": "webpack --watch",
    "emulators:start": "firebase emulators:start --import ./firestore-emulator-data --export-on-exit ./firestore-emulator-data",
    "serve:functions": "nodemon --watch 'src/**/*.ts' --watch 'shared/**/*.ts' --exec 'npm run build'",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "docker:start": "npm run build && npm run emulators:start & npm run serve:functions"
  },
  "main": "lib/index.js",
  "dependencies": {
    "firebase-tools": "^13.13.0",
    "@firebase/firestore-compat": "^0.3.23",
    "cors": "^2.8.5",
    "firebase-admin": "^11.11.1",
    "firebase-functions": "^4.5.0",
    "unique-names-generator": "^4.7.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "eslint": "^8.9.0",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-import": "^2.25.4",
    "firebase-functions-test": "^3.1.0",
    "nodemon": "^3.0.2",
    "ts-loader": "^9.5.1",
    "typescript": "^4.9.0",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "private": true
}
