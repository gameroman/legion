{
  "functions": 
  {
    "source": "api/functions",
    "runtime": "nodejs18",
    "codebase": "default",
    "ignore": [
      "node_modules",
      ".git",
      "firebase-debug.log",
      "firebase-debug.*.log"
    ],
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint",
      "npm --prefix \"$RESOURCE_DIR\" run build"
    ]
  },
  "emulators": {
    "auth": {
      "port": 9099
    },
    "functions": {
      "port": 5001
    },
    "firestore": {
      "port": 8085,
      "export-on-exit": "./firestore-emulator-data",
      "import": "./firestore-emulator-data"
    },
    "ui": {
      "enabled": true
    },
    "singleProjectMode": true
  }
}
